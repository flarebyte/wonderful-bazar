describe 'magma-cache', ()->
  describe 'shortTerm', ()->

    it 'stores in cache', ()->
      cache.setValue(cache.ST,"key123","value123")
      cache.getValue(cache.ST,"key123").should.eql "value123"
      cache.hasValue(cache.ST,"key123").should.be.ok
      cache.hasValue(cache.ST, "key1234").should.be.ko
    it 'delete cache', ()->
      cache.setValue(cache.ST, "key1234","value1234")
      cache.delValue(cache.ST, "key1234")
      should.not.exist cache.getValue(cache.ST, "key1234")
