//Search

fieldset.search
	border none
	width 243px
	margin 0 auto
	background #222

.search input
	border none
	float left

.search button
	border none
	float left
	
.search input.box
	color #fff
	font-size 1.2em
	width 190px
	height 30px
	padding 8px 5px 0
	background #616161 url($search_img) no-repeat
	margin-right 5px

.search input.box:focus
	background #616161 url($search_img) no-repeat left -38px
	outline none

.search button.btn
	width 38px
	height 38px
	cursor pointer
	text-indent -9999px
	background #fbc900 url($search_img) no-repeat top right

.search button.btn:hover
	background #fbc900 url($search_img) no-repeat bottom right

